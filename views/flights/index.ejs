<%- include('../partials/header') %>

  <h1>All Flights</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Departure Time</th>
      </tr>
    </thead>
  

            <% flights.forEach(function(flight) { %>
                <tr>
                    <td class="departed"><%= flight.airline %></td>
                    <td class="departed"><%= flight.airport %></td>
                    <td class="departed"><%= flight.flightNo %></td>
                    <td class="departed"><%= flight.departs %></td>
                   
                    <td><a href="/flights/<%= flight._id %>" class="btn btn-info" id="flight-info-btn">Details</a></td>
                    
                </tr>
            
            <% }); %>
       
    </table>
 
</body>
</html>